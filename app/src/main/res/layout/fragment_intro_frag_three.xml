<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_colour"
    android:layout_height="match_parent"
    tools:context=".ui.Introduction.IntroFragOne">
    <ImageView
        android:src="@drawable/intro_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/open_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Assist"
            android:textColor="@color/secondary_colour"
            android:textSize="24sp" />
        <TextView
            android:layout_marginVertical="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/intro_three"
            android:layout_width="259dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>