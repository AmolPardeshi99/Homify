<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.training.TestResultFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/quizToolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_colour">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="-10dp"
                    android:background="#0000ffff"
                    android:src="@drawable/ic_prev_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Test"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#0000ffff"
                    android:src="@drawable/ic_question_icon" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:backgroundTintMode="add"
            android:layout_margin="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/light_btn_colour"
            android:layout_height="wrap_content"
            android:text="Improve Working Skills"
            />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowDy="-4"
            >

        </com.google.android.material.card.MaterialCardView>

<LinearLayout
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tvNoOfQuestion"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="Number of Questions"
                    />

                <TextView
                    android:id="@+id/tvAnswerdQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNoOfQuestion"
                    android:layout_marginVertical="5dp"
                    android:text="Answered Questions"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tvWrongQ"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/tvAnswerdQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wrong Answers"
                    />
                <TextView
                    android:id="@+id/tvTotalScore"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/tvWrongQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Score"
                    />

                <TextView
                    android:id="@+id/tvNoOfQuestion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="5dp"
                    android:text="04"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tvAnswerdQ2"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tvNoOfQuestion"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:text="04"
                    />
                <TextView
                    android:id="@+id/tvWrongQ2"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/tvAnswerdQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    />
                <TextView
                    android:id="@+id/tvTotalScore2"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/tvWrongQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/finishTest"
        android:layout_margin="20dp"
        android:backgroundTint="@color/secondary_colour"
        android:text="finish"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

    </LinearLayout>
</layout>